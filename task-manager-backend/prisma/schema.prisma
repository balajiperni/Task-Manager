generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  tasks     Task[]
  createdAt DateTime @default(now())
}

model Task {
  id           Int       @id @default(autoincrement())
  title        String
  description  String?
  status       String    @default("Pending")
  priority     String    @default("Medium")
  dueDate      DateTime?
  userId       Int
  user         User      @relation(fields: [userId], references: [id])
  createdAt    DateTime  @default(now())

  // Status timestamps
  startedAt    DateTime?
  completedAt  DateTime?
  reopenedAt   DateTime?

  // üóëÔ∏è Soft delete
  isDeleted    Boolean   @default(false)
  deletedAt    DateTime?

  @@index([userId])
  @@index([status])
  @@index([priority])
  @@index([isDeleted])
}
model AuditLog {
  id        Int      @id @default(autoincrement())
  userId    Int
  taskId    Int?
  action    String
  createdAt DateTime @default(now())
}
